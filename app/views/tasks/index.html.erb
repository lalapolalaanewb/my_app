<head>
<link rel="stylesheets" type="text/css" href="task.css.scss">
</head>
<body>
<h1>Senarai Tugasan</h1>

<table>
  <thead>
    <tr>
      <th>Tajuk</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>

<br><a href="/users"> Link ke User </a>
<br><%= link_to "Link ke Users menggunakan link_to", new_user_path%></br><br>
</body>